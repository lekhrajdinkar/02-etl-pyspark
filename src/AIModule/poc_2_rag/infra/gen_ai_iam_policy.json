{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowInvokeBedrockModels",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:InvokeModelWithResponseStream",
        "bedrock:ListFoundationModels",
        "bedrock:GetModelInvocationLoggingConfiguration"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:PutObject",
        "s3:GetObject",
        "s3:ListBucket",
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:s3:::genai-rag-demo-bucket",
        "arn:aws:s3:::genai-rag-demo-bucket/*"
      ]
    }
  ]
}